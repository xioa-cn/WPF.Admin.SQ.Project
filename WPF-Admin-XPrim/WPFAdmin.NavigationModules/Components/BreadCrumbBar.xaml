<UserControl
    x:Class="WPFAdmin.NavigationModules.Components.BreadCrumbBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18nLocalizeAttach="clr-namespace:WPF.Admin.Themes.I18n;assembly=WPF.Admin.Themes"
    xmlns:local="clr-namespace:WPFAdmin.NavigationModules.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nav="clr-namespace:XPrism.Core.Navigations;assembly=XPrism.Core"
    xmlns:region="clr-namespace:WPF.Admin.Models.Models;assembly=WPF.Admin.Models"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            x:Name="HeaderBorder"
            Grid.Row="0"
            Height="2"
            VerticalAlignment="Bottom"
            Background="{DynamicResource Primary.Brush}"
            Visibility="Collapsed" />
        <Grid Grid.Row="0" Margin="2">

            <ItemsControl x:Name="navButton">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <RadioButton
                                x:Name="radionButton"
                                Margin="0.25,0"
                                Padding="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Click="GotoView_Click"
                                GroupName="button1"
                                IsChecked="{Binding IsChecked}"
                                Tag="{Binding}">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border
                                            Width="120"
                                            Margin="0,0,0,1"
                                            Background="{DynamicResource Background.Brush}"
                                            BorderBrush="{DynamicResource Border.Brush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                            <StackPanel>
                                                <Border
                                                    Name="bd"
                                                    Width="118"
                                                    Height="4"
                                                    Margin="0,0,0,0"
                                                    CornerRadius="4,4,0,0" />
                                                <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock
                                                        Name="Content"
                                                        Width="65"
                                                        Margin="4.5,1"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        i18nLocalizeAttach:I18nLocalizeAttach.AutoLocalize="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                                                        Foreground="{DynamicResource Text.Secondary.Brush}"
                                                        Tag="{Binding Content}" />
                                                    <Button
                                                        Width="12"
                                                        Height="12"
                                                        Margin="5,0"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        Click="Eject_Click"
                                                        Tag="{Binding}"
                                                        Visibility="{Binding ElementName=radionButton, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Opacity" Value="0.8" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                        <Path
                                                            Width="7"
                                                            Height="7"
                                                            Data="{StaticResource Eject}"
                                                            Fill="{DynamicResource Text.Secondary.Brush}"
                                                            Stretch="Fill" />
                                                    </Button>
                                                    <Button
                                                        Width="12"
                                                        Height="12"
                                                        Margin="5,0"
                                                        HorizontalAlignment="Right"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        Tag="{Binding}"
                                                        Visibility="Hidden">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Opacity" Value="0.8" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                        <Path
                                                            Width="7"
                                                            Height="7"
                                                            Data="{StaticResource CloseIco}"
                                                            Fill="{DynamicResource Text.Secondary.Brush}"
                                                            Stretch="Fill" />
                                                    </Button>

                                                </DockPanel>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource Primary.Brush}" />
                                                <Setter Property="Background" Value="{DynamicResource Surface.Brush}" />
                                                <Setter TargetName="Content" Property="Foreground" Value="{DynamicResource Primary.Brush}" />
                                                <Setter TargetName="Content" Property="FontWeight" Value="Bold" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource Surface.Brush}" />
                                                <Setter TargetName="Content" Property="Foreground" Value="{DynamicResource Primary.Brush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>

                            <Button
                                Width="12"
                                Height="12"
                                Margin="6,5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="Close_Click"
                                Tag="{Binding}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.8" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Path
                                    Width="7"
                                    Height="7"
                                    Data="{StaticResource CloseIco}"
                                    Fill="{DynamicResource Text.Secondary.Brush}"
                                    Stretch="Fill" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <ContentControl
                Grid.Row="0"
                Margin="10,10,10,0"
                nav:RegionManagerProperty.RegionName="{x:Static region:RegionName.HomeRegion}" />


            <StackPanel Grid.Row="1">
                <TextBlock
                    Margin="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="{Binding ApplicationCreateTime}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>