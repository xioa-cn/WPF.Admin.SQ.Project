<UserControl
    x:Class="SQ.Project.Component.StationFirst"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SQ.Project.Component"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SQ.Project.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:StationFirstViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Margin="5" FontSize="20">程序信息：</TextBlock>
            <ListBox
                Name="ListBox_Msg"
                Grid.Row="1"
                Margin="5"
                Background="Transparent"
                BorderBrush="Transparent"
                FontSize="25"
                Foreground="#FFFFFF"
                ItemsSource="{Binding Msg}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Style.Triggers />
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem>
                            <MenuItem.Header>
                                <CheckBox
                                    Name="AutoScroll"
                                    Content="自动滚动"
                                    IsChecked="{Binding IsAutoScroll}" />
                            </MenuItem.Header>
                        </MenuItem>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </Grid>

        <StackPanel
            Grid.RowSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource SYstem.Main.Color.Fill}">
            <StackPanel Margin="10">
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="30">
                        条码内容：
                    </TextBlock>
                    <Label
                        Width="500"
                        Height="50"
                        HorizontalAlignment="Left"
                        Content="{Binding Code}"
                        FontSize="30"
                        FontWeight="Bold" />
                </StackPanel>
                <StackPanel
                    Margin="160,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding Status}" Style="{StaticResource CircularLight}" />
                    <TextBlock Margin="5" FontSize="20">条码读取信号</TextBlock>

                    <CheckBox
                        Margin="5,0,0,0"
                        IsChecked="{Binding MesResult}"
                        Style="{StaticResource CircularLight}" />
                    <TextBlock Margin="5" FontSize="20">条码检测结果</TextBlock>
                </StackPanel>
            </StackPanel>
        </StackPanel>


    </Grid>
</UserControl>
