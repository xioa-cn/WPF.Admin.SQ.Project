<Window
    x:Class="Xioa.Setup.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Xioa.Installer"
    Width="600"
    Height="450"
    FontWeight="Bold"
    ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/bg.png" />
        </Grid.Background>
        <Grid Margin="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Margin="0,0,0,5" Text="安装路径：" />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="InstallPathTextBox"
                    Margin="0,0,5,0"
                    Text="C:\Program Files\Xioa" />
                <Button
                    Grid.Column="1"
                    Width="80"
                    Click="BrowseButton_Click"
                    Content="浏览..." />
            </Grid>

            <StackPanel Grid.Row="2" Margin="0,10">
                <TextBlock
                    x:Name="RequiredSpaceText"
                    Margin="0,0,0,5"
                    Text="所需空间: 计算中..." />
                <TextBlock x:Name="AvailableSpaceText" Text="可用空间: 计算中..." />
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,10">
                <CheckBox
                    x:Name="CreateDesktopShortcutCheckBox"
                    Margin="0,0,0,5"
                    Content="创建桌面快捷方式"
                    IsChecked="True" />
                <CheckBox
                    x:Name="CreateStartMenuShortcutCheckBox"
                    Content="创建开始菜单快捷方式"
                    IsChecked="True" />
            </StackPanel>

            <TextBlock
                x:Name="StatusText"
                Grid.Row="4"
                Margin="0,10"
                TextWrapping="Wrap" />

            <ProgressBar
                x:Name="InstallProgressBar"
                Grid.Row="5"
                Height="20"
                Margin="0,10"
                Visibility="Collapsed" />

            <StackPanel
                Grid.Row="6"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="UninstallButton"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="UninstallButton_Click"
                    Content="卸载"
                    Visibility="Collapsed" />
                <Button
                    x:Name="InstallButton"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="InstallButton_Click"
                    Content="安装" />
                <Button
                    x:Name="CancelButton"
                    Width="80"
                    Click="CancelButton_Click"
                    Content="取消" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
