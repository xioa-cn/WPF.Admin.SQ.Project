<Page x:Class="AntDiagramModules.Views.AntDiagramView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AntDiagramModules.Views"
      mc:Ignorable="d"
      Title="AntDiagramView" >
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/WPF.Admin.Themes;component/Generic.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  控制面板  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,16"
            Orientation="Horizontal">
            <Button
                x:Name="StartButton"
                Margin="0,0,8,0"
                Click="StartButton_Click"
                Style="{StaticResource ButtonWarning}">

                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="开始动画" />

            </Button>

            <Button
                x:Name="StopButton"
                Click="StopButton_Click"
                Style="{StaticResource ButtonWarning}">

                <TextBlock Text="停止动画" />

            </Button>
        </StackPanel>

        <!--  显示区域  -->
        <Border
            Grid.Row="1"
            Background="{DynamicResource Background.Secondary.Brush}"
            BorderBrush="{DynamicResource Border.Brush}"
            BorderThickness="1"
            CornerRadius="4">

            <Canvas x:Name="DisplayCanvas" ClipToBounds="True">
                <!--  蚂蚁线选框  -->
                <Path
                    x:Name="AntLine"
                    Stroke="Black"
                    StrokeThickness="5">
                    <Path.Data>
                        <RectangleGeometry x:Name="SelectionRect" Rect="90,90,220,170" />
                    </Path.Data>
                    <!--  虚线  -->
                    <Path.StrokeDashArray>
                        <!--  数值越小，虚线越密集；数值越大，虚线越稀疏。  -->
                        <DoubleCollection>4,4</DoubleCollection>
                    </Path.StrokeDashArray>
                </Path>


                <!--  管道路径  -->
                <Path
                    x:Name="PipeLine"
                    Canvas.Left="300"
                    Canvas.Top="100"
                    Stroke="{DynamicResource Primary.Brush}"
                    StrokeThickness="4">
                    <Path.Data>
                        <PathGeometry>
                            <!--  起点(50,100)  -->
                            <PathFigure StartPoint="50,100">
                                <!--  第一段：水平直线到(200,100)  -->
                                <LineSegment Point="200,100" />
                                <!--  第二段：弧线到(300,200)  -->
                                <!--  弧线终点  -->
                                <!--  弧线的椭圆半径(X,Y) Size="100,100"  -->
                                <!--  顺时针方向画弧  -->
                                <ArcSegment
                                    Point="300,200"
                                    Size="100,100"
                                    SweepDirection="Clockwise" />
                                <!--  第三段：垂直直线到(300,300)  -->
                                <LineSegment Point="300,300" />
                                <ArcSegment
                                    Point="400,400"
                                    Size="100,100"
                                    SweepDirection="Counterclockwise" />
                                <LineSegment Point="500,400" />
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                    <Path.StrokeDashArray>
                        <DoubleCollection>4,4</DoubleCollection>
                    </Path.StrokeDashArray>
                </Path>
            </Canvas>
        </Border>
    </Grid>
</Page>
