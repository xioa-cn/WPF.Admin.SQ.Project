<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:qqComboBox="clr-namespace:WPFAdmin.LoginModules.Components">
    <qqComboBox:MultiParamsConverter x:Key="MultiParams" />
    <Style TargetType="{x:Type qqComboBox:QQComboBox}">
        <Setter Property="Height" Value="30" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type qqComboBox:QQComboBox}">
                    <Grid Height="{TemplateBinding Height}">
                        <!--  主要输入区域  -->
                        <Border
                            x:Name="MainBorder"
                            Background="Transparent"
                            BorderThickness="2"
                            CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="32" />
                                </Grid.ColumnDefinitions>

                                <!--  输入框  -->
                                <TextBox
                                    x:Name="PART_TextBox"
                                    Grid.Column="0"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    hc:InfoElement.Placeholder="请输入账户"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="17"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Style="{StaticResource TextBoxExtend}"
                                    Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Resources>
                                        <SolidColorBrush x:Key="ThirdlyTextBrush" Color="{DynamicResource Text.Secondary.Color}" />
                                    </TextBox.Resources>
                                </TextBox>
                                <!--  下拉按钮  -->
                                <ToggleButton
                                    x:Name="PART_DropDownButton"
                                    Grid.Column="2"
                                    Margin="0"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0">
                                    <ToggleButton.Resources>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent">
                                                            <Path
                                                                x:Name="path"
                                                                Width="14"
                                                                Height="14"
                                                                Fill="Transparent"
                                                                Stretch="Uniform"
                                                                Stroke="{DynamicResource Primary.Brush}">
                                                                <Path.Style>
                                                                    <Style TargetType="Path">
                                                                        <Setter Property="Data" Value="M 4,8 L 12,16 L 20,8" />
                                                                        <Style.Triggers />
                                                                    </Style>
                                                                </Path.Style>
                                                            </Path>

                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="path" Property="Data" Value="M 4,16 L 12,8 L 20,16" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Resources>

                                </ToggleButton>
                            </Grid>
                        </Border>

                        <!--  下拉列表  -->
                        <Popup
                            x:Name="PART_Popup"
                            MaxHeight="150"
                            Margin="0,5"
                            AllowsTransparency="True"
                            IsOpen="False"
                            Placement="Bottom"
                            PlacementTarget="{Binding ElementName=MainBorder}">
                            <Border Background="Transparent">
                                <Border
                                    MinHeight="50"
                                    Margin="0,1"
                                    BorderThickness="0"
                                    CornerRadius="5">
                                    <ScrollViewer>
                                        <ItemsControl
                                            x:Name="PART_ItemsControl"
                                            Width="{TemplateBinding Width}"
                                            Margin="0"
                                            Padding="5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            BorderThickness="0"
                                            ItemsSource="{TemplateBinding ItemsSource}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="Transparent" BorderThickness="0">
                                                        <Button
                                                            Width="{Binding Path=Width, ElementName=PART_ItemsControl}"
                                                            Background="Transparent"
                                                            BorderBrush="Transparent"
                                                            BorderThickness="0"
                                                            Command="{Binding SelectCommand, RelativeSource={RelativeSource AncestorType=qqComboBox:QQComboBox}}"
                                                            CommandParameter="{Binding}">



                                                            <Grid Width="{Binding Path=Width, ElementName=PART_ItemsControl}" Background="Transparent">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock
                                                                    Name="contentText"
                                                                    Margin="10,0"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                    Background="Transparent"
                                                                    Text="{Binding}" />

                                                                <Button
                                                                    Grid.Column="1"
                                                                    Margin="10,0"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Background="Transparent"
                                                                    BorderBrush="Transparent"
                                                                    Command="{Binding DeleteCommand, RelativeSource={RelativeSource AncestorType=qqComboBox:QQComboBox}}"
                                                                    CommandParameter="{Binding}">
                                                                    <Path
                                                                        Height="5"
                                                                        Data="{StaticResource CloseIco}"
                                                                        Fill="{DynamicResource Text.Primary.Brush}"
                                                                        Stretch="Uniform" />
                                                                </Button>
                                                            </Grid>

                                                        </Button>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>