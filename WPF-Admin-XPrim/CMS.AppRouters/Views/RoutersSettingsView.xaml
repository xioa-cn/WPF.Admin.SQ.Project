<Page
    x:Class="CMS.AppRouters.Views.RoutersSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CMS.AppRouters.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sModel="clr-namespace:CMS.AppRouters.Models"
    xmlns:vm="clr-namespace:CMS.AppRouters.ViewModels"
    Title="RoutersSettingsView"
    d:DataContext="{d:DesignInstance Type=vm:RoutersSettingsViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <ItemsControl
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ItemsSource="{Binding Source={x:Static sModel:Router.Instance}, Path=Routers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Background="{DynamicResource Background.Brush}"
                            BorderBrush="{DynamicResource Border.Brush}"
                            BorderThickness="1"
                            CornerRadius="2">
                            <StackPanel Margin="10">
                                <Button Click="ContentClick" Tag="{Binding}">
                                    <TextBlock Text="{Binding Content}" />
                                </Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Grid Grid.Column="1">
            <TextBox
                Name="ContentText"
                Padding="10"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                AcceptsReturn="True"
                AcceptsTab="True"
                FontSize="20"
                HorizontalScrollBarVisibility="Auto"
                Text="{Binding RouterText}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
        </Grid>
        <Grid Grid.Column="2">
            <StackPanel
                Margin="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <Button Margin="10"
                        Width="180"
                        Height="50" Click="KDTextClick"
                        Style="{StaticResource ButtonSuccess}">
                    格式化文本
                </Button>
                <Button
                    Width="180" Margin="10"
                    Height="50"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource ButtonSuccess}">
                    保存
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>