<Page x:Class="GetColorModules.Views.GetColorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:attachBehavior="clr-namespace:XioaAttachedBehavior.Behaviors;assembly=AttachedBehavior"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GetColorModules.Views"
      mc:Ignorable="d"
      Title="GetColorPage" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Border
                MaxWidth="300"
                MaxHeight="300"
                Margin="0,0,0,0"
                BorderBrush="Gray"
                BorderThickness="1">
                <Rectangle x:Name="ColorPreview" Fill="Transparent" />
            </Border>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    x:Name="ColorCode"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="#000000" />
                <TextBlock
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    Foreground="Gray"
                    Text="按 Alt + C 复制颜色代码" />
            </StackPanel>
            <CheckBox
                x:Name="GetForuse"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Content="Click Me Get Color" />
        </Grid>
        <Grid Grid.Column="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="soueceColor" Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="auto"
                                Margin="1"
                                attachBehavior:MouseLeftButtonDownBehavior.Command="{Binding CopyColorCommand, RelativeSource={RelativeSource AncestorType=local:GetColorPage}}"
                                attachBehavior:MouseLeftButtonDownBehavior.CommandParameter="{Binding}"
                                Background="{Binding}">
                                <TextBlock
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding}" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
