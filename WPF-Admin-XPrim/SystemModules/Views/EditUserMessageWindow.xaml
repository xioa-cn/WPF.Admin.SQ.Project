<Window
    x:Class="SystemModules.Views.EditUserMessageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SystemModules.Views"
    xmlns:i18n="clr-namespace:WPF.Admin.Themes.I18n;assembly=WPF.Admin.Themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{i18n:Localize Window.Title.EditUserMessageWindow}"
    Width="380"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="1" />
    </WindowChrome.WindowChrome>
    <Border
        BorderBrush="{DynamicResource Primary.Brush}"
        BorderThickness="3"
        CornerRadius="8"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock
                        Margin="0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{i18n:Localize Login.UserName}"
                        FontWeight="Bold">
                    </TextBlock>
                    <TextBox Name="UserName" Width="150" />

                    <TextBlock
                        Margin="0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{i18n:Localize Login.Password}"
                        FontWeight="Bold">
                    </TextBlock>
                    <TextBox Name="Pwd" Width="150" />

                    <TextBlock
                        Margin="0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{i18n:Localize Permission}"
                        FontWeight="Bold">
                       
                    </TextBlock>
                    <StackPanel>
                        <RadioButton
                            Name="IsAdmin"
                            Margin="5"
                            HorizontalAlignment="Left"
                            Content="{i18n:Localize Admin}"
                            GroupName="UserAuth" />
                        <RadioButton
                            Name="IsEngineer"
                            Margin="5"
                            HorizontalAlignment="Left"
                            Content="{i18n:Localize Engineer}"
                            GroupName="UserAuth" />
                        <RadioButton
                            Name="IsOperator"
                            Margin="5"
                            HorizontalAlignment="Left"
                            Content="{i18n:Localize Employee}"
                            GroupName="UserAuth" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>


            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="150"
                    Margin="10"
                    Click="Submit_Click"
                    Content="{i18n:Localize btn.Submit}"
                    Style="{StaticResource ButtonPrimary}">
                    
                </Button>
                <Button
                    Width="150"
                    Margin="10"
                    Click="Cancel_Click"
                    Content="{i18n:Localize btn.Cancel}"
                    Style="{StaticResource ButtonInfo}">
                    
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
