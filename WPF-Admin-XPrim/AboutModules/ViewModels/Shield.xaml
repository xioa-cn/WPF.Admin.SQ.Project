<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AboutModules.ViewModels">
     <Style TargetType="{x:Type local:Shield}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Shield}">
                    <Border
                        x:Name="MainBorder"
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <!--  左侧主题部分  -->
                            <Border
                                Grid.Column="0"
                                Padding="8,4"
                                Background="{TemplateBinding SubjectBackground}"
                                CornerRadius="3,0,0,3">
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <ContentPresenter
                                        x:Name="IconPresenter"
                                        Margin="0,0,4,0"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding Icon}" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="{TemplateBinding Subject}" />
                                </StackPanel>
                            </Border>

                            <!--  右侧状态部分  -->
                            <Border
                                Grid.Column="1"
                                Padding="8,4"
                                Background="{TemplateBinding StatusBackground}"
                                CornerRadius="0,3,3,0">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="{TemplateBinding Status}" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.6" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>