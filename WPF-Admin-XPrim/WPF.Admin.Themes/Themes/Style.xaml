    <!--  主题切换按钮样式  -->
    <Style x:Key="ThemeToggleStyle" TargetType="ToggleButton">
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border
                        x:Name="border"
                        Background="{DynamicResource Surface.Brush}"
                        BorderThickness="0"
                        CornerRadius="20">
                        <Grid>
                            <Border
                                x:Name="switchTrack"
                                Width="70"
                                Height="30"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="#E4E6EB"
                                CornerRadius="15">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="10"
                                        Direction="0"
                                        Opacity="0.2"
                                        ShadowDepth="0"
                                        Color="#000000" />
                                </Border.Effect>
                            </Border>
                            <Border
                                x:Name="switchThumb"
                                Width="30"
                                Height="30"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Left"
                                CornerRadius="15">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#FFFFFF" />
                                        <GradientStop Offset="1" Color="#F5F5F5" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="8"
                                        Direction="315"
                                        Opacity="0.3"
                                        ShadowDepth="2"
                                        Color="#000000" />
                                </Border.Effect>
                                <!--  内部阴影效果  -->
                                <Border Background="Transparent" CornerRadius="15">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            Direction="90"
                                            Opacity="0.1"
                                            ShadowDepth="0"
                                            Color="#000000" />
                                    </Border.Effect>
                                </Border>
                            </Border>
                            <Path
                                x:Name="lightIcon"
                                Width="16"
                                Height="16"
                                Margin="53,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Data="{StaticResource SunIcon}"
                                Fill="#94969A"
                                Stretch="Uniform" />
                            <Path
                                x:Name="darkIcon"
                                Width="16"
                                Height="16"
                                Margin="12,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Data="{StaticResource MoonIcon}"
                                Fill="#94969A"
                                Stretch="Uniform" />
                            <Canvas
                                x:Name="stars"
                                Margin="12,0,0,0"
                                HorizontalAlignment="Left"
                                Opacity="0">
                                <Path
                                    Canvas.Left="2"
                                    Canvas.Top="5"
                                    Width="3"
                                    Height="3"
                                    Data="M 0,1.5 L 1.5,0 L 3,1.5 L 1.5,3 Z"
                                    Fill="#94969A" />
                                <Path
                                    Canvas.Left="8"
                                    Canvas.Top="3"
                                    Width="2"
                                    Height="2"
                                    Data="M 0,1 L 1,0 L 2,1 L 1,2 Z"
                                    Fill="#94969A" />
                                <Path
                                    Canvas.Left="6"
                                    Canvas.Top="10"
                                    Width="2"
                                    Height="2"
                                    Data="M 0,1 L 1,0 L 2,1 L 1,2 Z"
                                    Fill="#94969A" />
                            </Canvas>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="switchTrack" Property="Background" Value="#242632" />
                            <Setter TargetName="switchThumb" Property="HorizontalAlignment" Value="Right" />
                            <Setter TargetName="switchThumb" Property="Margin" Value="0,0,5,0" />
                            <Setter TargetName="lightIcon" Property="Fill" Value="#4B4D52" />
                            <Setter TargetName="darkIcon" Property="Fill" Value="#F7B239" />
                            <Setter TargetName="stars" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="lightIcon" Property="Fill" Value="#F7B239" />
                            <Setter TargetName="darkIcon" Property="Fill" Value="#4B4D52" />
                            <Setter TargetName="stars" Property="Opacity" Value="0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

