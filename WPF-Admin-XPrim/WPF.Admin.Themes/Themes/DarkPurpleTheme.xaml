<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  主色调 - 深紫色系  -->
    <Color x:Key="Primary.Color">#722ed1</Color>
    <SolidColorBrush x:Key="Primary.Brush" Color="{StaticResource Primary.Color}" />

    <!--  背景色  -->
    <Color x:Key="Background.Color">#17171f</Color>
    <SolidColorBrush x:Key="Background.Brush" Color="{StaticResource Background.Color}" />

    <!--  次级背景色  -->
    <Color x:Key="Background.Secondary.Color">#24243c</Color>
    <SolidColorBrush x:Key="Background.Secondary.Brush" Color="{StaticResource Background.Secondary.Color}" />
    <SolidColorBrush x:Key="Surface.Brush" Color="{StaticResource Background.Secondary.Color}" />
    <!--  边框颜色  -->
    <Color x:Key="Border.Color">#2f2f4d</Color>
    <SolidColorBrush x:Key="Border.Brush" Color="{StaticResource Border.Color}" />

    <!--  文本颜色  -->
    <Color x:Key="Text.Primary.Color">#ffffff</Color>
    <SolidColorBrush x:Key="Text.Primary.Brush" Color="{StaticResource Text.Primary.Color}" />

    <Color x:Key="Text.Secondary.Color">#a6a6a6</Color>
    <SolidColorBrush x:Key="Text.Secondary.Brush" Color="{StaticResource Text.Secondary.Color}" />

    <!--  导航项背景  -->
    <Color x:Key="NavItem.Background.Selected.Color">#24243c</Color>
    <SolidColorBrush x:Key="NavItem.Background.Selected" Color="{StaticResource NavItem.Background.Selected.Color}" />

    <!--  表格相关颜色  -->
    <Color x:Key="DataGrid.Header.Background.Color">#24243c</Color>
    <SolidColorBrush x:Key="DataGrid.Header.Background" Color="{StaticResource DataGrid.Header.Background.Color}" />

    <Color x:Key="DataGrid.AlternatingRow.Color">#17171f</Color>
    <SolidColorBrush x:Key="DataGrid.AlternatingRow" Color="{StaticResource DataGrid.AlternatingRow.Color}" />

    <!--  滚动条颜色  -->
    <Color x:Key="ScrollBar.Background.Color">#17171f</Color>
    <SolidColorBrush x:Key="ScrollBar.Background" Color="{StaticResource ScrollBar.Background.Color}" />

    <Color x:Key="ScrollBar.Thumb.Color">#2f2f4d</Color>
    <SolidColorBrush x:Key="ScrollBar.Thumb" Color="{StaticResource ScrollBar.Thumb.Color}" />

    <Color x:Key="ScrollBar.Thumb.Hover.Color">#3f3f66</Color>
    <SolidColorBrush x:Key="ScrollBar.Thumb.Hover" Color="{StaticResource ScrollBar.Thumb.Hover.Color}" />

    <!--  按钮颜色  -->
    <Color x:Key="Button.Background.Color">#24243c</Color>
    <SolidColorBrush x:Key="Button.Background" Color="{StaticResource Button.Background.Color}" />

    <Color x:Key="Button.Background.Hover.Color">#9254de</Color>
    <SolidColorBrush x:Key="Button.Background.Hover" Color="{StaticResource Button.Background.Hover.Color}" />

    <Color x:Key="Button.Background.Pressed.Color">#531dab</Color>
    <SolidColorBrush x:Key="Button.Background.Pressed" Color="{StaticResource Button.Background.Pressed.Color}" />

    <!--  输入框颜色  -->
    <Color x:Key="TextBox.Background.Color">#24243c</Color>
    <SolidColorBrush x:Key="TextBox.Background" Color="{StaticResource TextBox.Background.Color}" />

    <Color x:Key="TextBox.Border.Color">#2f2f4d</Color>
    <SolidColorBrush x:Key="TextBox.Border" Color="{StaticResource TextBox.Border.Color}" />

    <Color x:Key="TextBox.Border.Focus.Color">#722ed1</Color>
    <SolidColorBrush x:Key="TextBox.Border.Focus" Color="{StaticResource TextBox.Border.Focus.Color}" />

    <!--  标题栏颜色  -->
    <Color x:Key="TitleBar.Background.Color">#17171f</Color>
    <SolidColorBrush x:Key="TitleBar.Background" Color="{StaticResource TitleBar.Background.Color}" />

    <!--  分割线颜色  -->
    <Color x:Key="Separator.Color">#2f2f4d</Color>
    <SolidColorBrush x:Key="Separator.Brush" Color="{StaticResource Separator.Color}" />

    <!--  工具提示颜色  -->
    <Color x:Key="ToolTip.Background.Color">#24243c</Color>
    <SolidColorBrush x:Key="ToolTip.Background" Color="{StaticResource ToolTip.Background.Color}" />

    <Color x:Key="ToolTip.Border.Color">#2f2f4d</Color>
    <SolidColorBrush x:Key="ToolTip.Border" Color="{StaticResource ToolTip.Border.Color}" />

    <!--  弹出框颜色  -->
    <Color x:Key="Popup.Background.Color">#24243c</Color>
    <SolidColorBrush x:Key="Popup.Background" Color="{StaticResource Popup.Background.Color}" />

    <Color x:Key="Popup.Border.Color">#2f2f4d</Color>
    <SolidColorBrush x:Key="Popup.Border" Color="{StaticResource Popup.Border.Color}" />

    <!--  禁用状态颜色  -->
    <Color x:Key="Disabled.Background.Color">#17171f</Color>
    <SolidColorBrush x:Key="Disabled.Background" Color="{StaticResource Disabled.Background.Color}" />

    <Color x:Key="Disabled.Foreground.Color">#2f2f4d</Color>
    <SolidColorBrush x:Key="Disabled.Foreground" Color="{StaticResource Disabled.Foreground.Color}" />

    <!--  错误状态颜色  -->
    <Color x:Key="Error.Color">#ff4d4f</Color>
    <SolidColorBrush x:Key="Error.Brush" Color="{StaticResource Error.Color}" />

    <!--  成功状态颜色  -->
    <Color x:Key="Success.Color">#52c41a</Color>
    <SolidColorBrush x:Key="Success.Brush" Color="{StaticResource Success.Color}" />

    <!--  警告状态颜色  -->
    <Color x:Key="Warning.Color">#faad14</Color>
    <SolidColorBrush x:Key="Warning.Brush" Color="{StaticResource Warning.Color}" />

    <!--  信息状态颜色  -->
    <Color x:Key="Info.Color">#909399</Color>
    <SolidColorBrush x:Key="Info.Brush" Color="{StaticResource Info.Color}" />
</ResourceDictionary> 