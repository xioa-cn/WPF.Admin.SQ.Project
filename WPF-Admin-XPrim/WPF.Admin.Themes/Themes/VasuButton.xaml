<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="VasuButton1" TargetType="Button">
        <Setter Property="Width" Value="200" />
        <Setter Property="Height" Value="60" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!--  主按钮  -->
                        <Border
                            x:Name="MainBorder"
                            Background="#202832"
                            BorderThickness="0"
                            CornerRadius="30">

                            <!--  冰冻效果层  -->
                            <Grid>
                                <!--  渐变背景  -->
                                <Border x:Name="FrostBorder" CornerRadius="30">
                                    <Border.Background>
                                        <LinearGradientBrush x:Name="FrostGradient" StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop x:Name="Frost1" Offset="-1" Color="#8067B9CC" />
                                            <GradientStop x:Name="Frost2" Offset="-0.5" Color="#8040E0B0" />
                                            <GradientStop x:Name="Frost3" Offset="0" Color="#0020B070" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <BlurEffect Radius="15" />
                                    </Border.Effect>
                                </Border>

                                <!--  文字  -->
                                <ContentPresenter
                                    x:Name="ContentPresenter"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <ContentPresenter.Effect>
                                        <DropShadowEffect
                                            BlurRadius="15"
                                            Direction="0"
                                            ShadowDepth="0"
                                            Color="White" />
                                    </ContentPresenter.Effect>
                                </ContentPresenter>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--  冰冻效果动画  -->
                                    <DoubleAnimation
                                        Storyboard.TargetName="Frost1"
                                        Storyboard.TargetProperty="Offset"
                                        From="-1"
                                        To="1"
                                        Duration="0:0:0.5" />
                                    <DoubleAnimation
                                        Storyboard.TargetName="Frost2"
                                        Storyboard.TargetProperty="Offset"
                                        From="-0.5"
                                        To="1.5"
                                        Duration="0:0:0.5" />
                                    <DoubleAnimation
                                        Storyboard.TargetName="Frost3"
                                        Storyboard.TargetProperty="Offset"
                                        From="0"
                                        To="2"
                                        Duration="0:0:0.5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--  冰冻效果消失动画  -->
                                    <DoubleAnimation
                                        Storyboard.TargetName="Frost1"
                                        Storyboard.TargetProperty="Offset"
                                        To="-1"
                                        Duration="0:0:0.5" />
                                    <DoubleAnimation
                                        Storyboard.TargetName="Frost2"
                                        Storyboard.TargetProperty="Offset"
                                        To="-0.5"
                                        Duration="0:0:0.5" />
                                    <DoubleAnimation
                                        Storyboard.TargetName="Frost3"
                                        Storyboard.TargetProperty="Offset"
                                        To="0"
                                        Duration="0:0:0.5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>