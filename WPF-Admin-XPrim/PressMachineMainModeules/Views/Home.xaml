        <GridSplitter
            Grid.RowSpan="3"
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            Visibility="Collapsed">
            <GridSplitter.Template>
                <ControlTemplate TargetType="GridSplitter">
                    <Border
                        Width="3"
                        Margin="2,0"
                        Background="{DynamicResource Border.Brush}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource Primary.Brush}" />
                                        <Setter Property="Width" Value="3" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <Grid
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Background="{DynamicResource Border.Brush}"
            Visibility="Collapsed">
            <StackPanel
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="10,0"
                    Content="{i18n:Localize Home.DelCode}"
                    Command="{Binding ClearCodeCommand}"
                    Style="{StaticResource ButtonDanger}">
                </Button>
                <TextBlock FontSize="20" Text="{i18n:Localize Home.CodeResult}"></TextBlock>
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Text="{Binding Code}" />

            </StackPanel>
            <StackPanel
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock FontSize="20" Text="{i18n:Localize Home.CurrentFormula}"></TextBlock>
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Text="{Binding ParmsNameNow}" />
            </StackPanel>
        </Grid>

