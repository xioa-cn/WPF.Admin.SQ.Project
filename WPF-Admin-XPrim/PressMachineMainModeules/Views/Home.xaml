    <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />

            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Border
            x:Name="pre1"
            Grid.Row="0"
            Grid.Column="0"
            Margin="1"
            RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Border.RenderTransform>
            <Grid>

                <com:PressMachineDrawingMainView
                    PloModelControlDt="{Binding PloModelControlDt10}"
                    PlotModel="{Binding PlotViewModel01.PlotModel, Mode=TwoWay}"
                    PressMachineNo="{Binding PlotViewModel01.PressMachineName, Mode=TwoWay}"
                    RenderTransformOrigin="0.5,0.5"
                    ShowCount="{Binding PlotViewModel01.ShowCount}">
                    <com:PressMachineDrawingMainView.RenderTransform>
                        <TransformGroup>
                            <TranslateTransform />
                        </TransformGroup>
                    </com:PressMachineDrawingMainView.RenderTransform>
                </com:PressMachineDrawingMainView>
                <Button
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="SwitchPosition_Click"
                    Style="{DynamicResource rigtbtn}" />
            </Grid>
        </Border>

