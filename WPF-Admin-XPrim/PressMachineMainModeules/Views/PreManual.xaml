<Page
    x:Class="PressMachineMainModeules.Views.PreManual"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:com="clr-namespace:PressMachineMainModeules.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PressMachineMainModeules.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PressMachineMainModeules.ViewModels"
    Title="PreManual"
    d:DataContext="{d:DesignInstance Type=vm:PreManualViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PressMachineMainModeules;component/Views/ManualButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>

        <Grid>
            <com:PressMachineManualAreaView />
        </Grid>

        <StackPanel
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom">
            <Button
                Width="10"
                Height="10"
                Margin="10"
                Command="{Binding OpenElfCommand}"
                Style="{StaticResource visaBtn1}">
                <Button.ToolTip>
                    <TextBlock>打开操作精灵</TextBlock>
                </Button.ToolTip>
                <!--<Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="{Binding ShowStatusViewCommand}" Header="弹出设备状态栏" />
                    </ContextMenu>
                </Button.ContextMenu>-->
            </Button>
        </StackPanel>
    </Grid>
</Page>
