<UserControl x:Class="PressMachineMainModeules.Components.AutoParametersNumberValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i18n="clr-namespace:WPF.Admin.Themes.I18n;assembly=WPF.Admin.Themes"
             xmlns:converter="clr-namespace:PressMachineMainModeules.Converters"
             xmlns:local="clr-namespace:PressMachineMainModeules.Components"
             mc:Ignorable="d" Name="numberValue"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converter:TypeVisibilityConverter x:Key="typeVisibility" />
        <converter:ParameterI18nConverter x:Key="I18NConverter"/>
        <converter:EnumToChineseConverter x:Key="enumtochinese" />
        <converter:AutoParameterDefaultConverter x:Key="AutoParameterDefaultConverter" />
        <Style x:Key="CorBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="8" />
        </Style>

    </UserControl.Resources>
    <Border
        MinWidth="200"
        MaxWidth="500"
        Margin="20,10,10,10"
        Background="{DynamicResource Border.Brush}"
        Style="{StaticResource CorBorder}">
        <StackPanel Margin="10">
            <TextBlock FontWeight="Bold"
                       i18n:I18nLocalizeAttach.AutoLocalize="{Binding 
                       AutoParameterContent.Desc,ElementName=numberValue,Converter={StaticResource I18NConverter}}" />
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />

                    <ColumnDefinition Width="60" />
                </Grid.ColumnDefinitions>
                <Border BorderBrush="{DynamicResource Border.Brush}"
                        BorderThickness="0,0,0,0">
                    <TextBox
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Style="{StaticResource TextBoxExtend}"
                        Text="{Binding AutoParameterContent.Value,ElementName=numberValue, UpdateSourceTrigger=LostFocus}" />
                </Border>
                <TextBlock
                    Grid.Column="1"
                    Margin="5,0"
                    VerticalAlignment="Bottom"
                    FontWeight="Bold"
                    Text="{Binding AutoParameterContent.Unit,ElementName=numberValue}" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>