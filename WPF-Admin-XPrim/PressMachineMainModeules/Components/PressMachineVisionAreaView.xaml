<UserControl
    x:Class="PressMachineMainModeules.Components.PressMachineVisionAreaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PressMachineMainModeules.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PressMachineMainModeules.ViewModels"
    x:Name="vis"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CorBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="8" />
        </Style>
    </UserControl.Resources>
    <UniformGrid
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Columns="2">
        <Border
            MinWidth="200"
            MaxWidth="400"
            Margin="20,10,10,10"
            Background="{DynamicResource Border.Brush}"
            Style="{StaticResource CorBorder}">
            <StackPanel Margin="10">
                <TextBlock FontWeight="Bold">X轴下限</TextBlock>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!--  使 TextBox 占满剩余空间  -->
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="{DynamicResource Border.Brush}" BorderThickness="0,0,0,0">
                        <TextBox
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Text="{Binding CurvePara.MinX, Mode=TwoWay, ElementName=vis, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}" />
                    </Border>
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0"
                        VerticalAlignment="Bottom"
                        FontWeight="Bold"
                        Text="{Binding Source={x:Static vm:GlobalUnitViewModel.Insance}, Path=PositionUnitName}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border
            MinWidth="200"
            MaxWidth="400"
            Margin="20,10,10,10"
            Background="{DynamicResource Border.Brush}"
            Style="{StaticResource CorBorder}">
            <StackPanel Margin="10">
                <TextBlock FontWeight="Bold">X轴上限</TextBlock>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!--  使 TextBox 占满剩余空间  -->
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="{DynamicResource Border.Brush}" BorderThickness="0,0,0,0">
                        <TextBox
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Text="{Binding CurvePara.MaxX, Mode=TwoWay, ElementName=vis, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}" />
                    </Border>
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0"
                        VerticalAlignment="Bottom"
                        FontWeight="Bold"
                        Text="{Binding Source={x:Static vm:GlobalUnitViewModel.Insance}, Path=PositionUnitName}" />
                </Grid>
            </StackPanel>
        </Border>


        <Border
            MinWidth="200"
            MaxWidth="400"
            Margin="20,10,10,10"
            Background="{DynamicResource Border.Brush}"
            Style="{StaticResource CorBorder}">
            <StackPanel Margin="10">
                <TextBlock FontWeight="Bold">Y轴下限</TextBlock>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!--  使 TextBox 占满剩余空间  -->
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="{DynamicResource Border.Brush}" BorderThickness="0,0,0,0">
                        <TextBox
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Text="{Binding CurvePara.MinY, Mode=TwoWay, ElementName=vis, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}" />
                    </Border>
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0"
                        VerticalAlignment="Bottom"
                        FontWeight="Bold"
                        Text="{Binding Source={x:Static vm:GlobalUnitViewModel.Insance}, Path=PositionUnitName}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border
            MinWidth="200"
            MaxWidth="400"
            Margin="20,10,10,10"
            Background="{DynamicResource Border.Brush}"
            Style="{StaticResource CorBorder}">
            <StackPanel Margin="10">
                <TextBlock FontWeight="Bold">Y轴上限</TextBlock>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!--  使 TextBox 占满剩余空间  -->
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="{DynamicResource Border.Brush}" BorderThickness="0,0,0,0">
                        <TextBox
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Text="{Binding CurvePara.MaxY, Mode=TwoWay, ElementName=vis, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}" />
                    </Border>
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0"
                        VerticalAlignment="Bottom"
                        FontWeight="Bold"
                        Text="{Binding Source={x:Static vm:GlobalUnitViewModel.Insance}, Path=PositionUnitName}" />
                </Grid>
            </StackPanel>
        </Border>
    </UniformGrid>
</UserControl>
