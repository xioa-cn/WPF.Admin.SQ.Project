<UserControl
    x:Class="PressMachineMainModeules.Components.Manual2ParameterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="clr-namespace:WPF.Admin.Themes.I18n;assembly=WPF.Admin.Themes"
    xmlns:converter="clr-namespace:PressMachineMainModeules.Converters"
    xmlns:local="clr-namespace:PressMachineMainModeules.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:PressMachineMainModeules.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:PreManual2ViewModel}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:ManualParameterI18nConverter x:Key="ManualParameterI18NConverter" />
    </UserControl.Resources>
    <Viewbox VerticalAlignment="Top">
        <Grid Width="500">

            <ItemsControl ItemsSource="{Binding ManualParametersModels}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            BorderBrush="{DynamicResource Primary.Brush}"
                            BorderThickness="1">
                            <StackPanel Margin="10">
                                <TextBlock FontSize="25"
                                           i18n:I18nLocalizeAttach.AutoLocalize="{Binding Desc,
                                            Converter={StaticResource ManualParameterI18NConverter}}" />
                                <Border
                                    Height="1"
                                    Margin="0,5"
                                    Padding="0"
                                    Background="{DynamicResource BorderBrush}" />
                                <StackPanel
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <TextBox
                                        Name="valueTextbox"
                                        Width="200"
                                        Height="40"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        FontSize="30"
                                        FontWeight="Bold"
                                        Foreground="{DynamicResource Primary.Brush}"
                                        Text="0.00"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        Width="90"
                                        VerticalAlignment="Bottom"
                                        FontSize="30"
                                        Text="{Binding Unit}" />
                                    <Button
                                        Width="80"
                                        Height="40"
                                        Margin="10,0"
                                        VerticalAlignment="Center"
                                        BorderBrush="{DynamicResource Primary.Brush}"
                                        Click="WriteParameterClick"
                                        CommandParameter="{Binding ElementName=valueTextbox, Path=Text}"
                                        FontSize="20"
                                        i18n:I18nLocalizeAttach.AutoLocalize="btn.Write"
                                        Tag="{Binding}">
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        </Grid>
    </Viewbox>
</UserControl>