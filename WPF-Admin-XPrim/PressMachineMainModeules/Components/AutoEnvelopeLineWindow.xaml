<Window
    x:Class="PressMachineMainModeules.Components.AutoEnvelopeLineWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="clr-namespace:WPF.Admin.Themes.I18n;assembly=WPF.Admin.Themes"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:PressMachineMainModeules.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:viewmodels="clr-namespace:PressMachineMainModeules.ViewModels"
    Title="{i18n:Localize Window.Title.PlotImport}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:AutoEnvelopeLineViewModel}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <hc:DialogContainer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="5"
                Orientation="Horizontal">
                <Button
                    Margin="5,0"
                    Content="{i18n:Localize EnvelopeLine.OpenFile}"
                    Command="{Binding OpenFileDialogSelectExcelCommand}"
                    Style="{StaticResource ButtonPrimary}">
                   
                </Button>
                <Button
                    Margin="5,0"
                    Content="{i18n:Localize EnvelopeLine.ResetData}"
                    Command="{Binding ShowCommand}"
                    Style="{StaticResource ButtonPrimary}">
                    
                </Button>


                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <TextBlock
                        Margin="5,0"
                        Text="{i18n:Localize EnvelopeLine.Offset}"
                        VerticalAlignment="Center"
                        FontSize="15">
                        
                    </TextBlock>
                    <TextBox Width="80" Text="{Binding OffsetValue}" />
                </StackPanel>

                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <TextBlock
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="{i18n:Localize EnvelopeLine.FrequencyPointSelection}"
                        FontSize="15">
                        
                    </TextBlock>
                    <TextBox Width="80" Text="{Binding InterpolationValue}" />
                </StackPanel>

            </StackPanel>
            <Button
                Grid.ColumnSpan="2"
                Margin="10,5"
                HorizontalAlignment="Right"
                Click="SaveData"
                Content="{i18n:Localize EnvelopeLine.SaveData}"
                Style="{StaticResource ButtonPrimary}">
                
            </Button>
            <Border
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Height="2"
                VerticalAlignment="Bottom" />
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,5,0,0"
                    Orientation="Horizontal">
                    <Button
                        Margin="5"
                        Content="{i18n:Localize EnvelopeLine.RefreshData}"
                        Command="{Binding UpdatePlotModelCommand}"
                        Style="{StaticResource ButtonPrimary}">
                        
                    </Button>
                    <Button
                        Margin="5"
                        Content="{i18n:Localize EnvelopeLine.AddPoint}"
                        Command="{Binding AddPositCommand}"
                        Style="{StaticResource ButtonPrimary}">
                       
                    </Button>
                </StackPanel>

                <ScrollViewer
                    Name="scrollvirewer"
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Auto">
                    <ItemsControl MinWidth="250" ItemsSource="{Binding Posints}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Height="160" Margin="5,0,0,5">
                                    <Grid>
                                        <StackPanel Margin="20,30,30,10" VerticalAlignment="Center">
                                            <StackPanel Margin="5" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="5"
                                                    i18n:I18nLocalizeAttach.AutoLocalize="EnvelopeLine.Limit.X"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                    
                                                </TextBlock>
                                                <TextBox Width="100" Text="{Binding X1}" />
                                            </StackPanel>
                                            <StackPanel Margin="5" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="5"
                                                    i18n:I18nLocalizeAttach.AutoLocalize="EnvelopeLine.Limit.Y1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                    
                                                </TextBlock>
                                                <TextBox Width="100" Text="{Binding Y1}" />
                                            </StackPanel>

                                            <StackPanel Margin="5" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="5"
                                                    i18n:I18nLocalizeAttach.AutoLocalize="EnvelopeLine.Limit.Y2"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                    
                                                </TextBlock>
                                                <TextBox Width="100" Text="{Binding Y2}" />
                                            </StackPanel>
                                        </StackPanel>
                                        <Button
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Click="OrderByValue"
                                            Style="{StaticResource IconButton}"
                                            Tag="{Binding}">
                                            <Path
                                                Width="10"
                                                Height="10"
                                                Data="{StaticResource Admin}"
                                                Fill="{DynamicResource Text.Primary.Brush}"
                                                Stretch="Fill" />
                                        </Button>
                                        <Button
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Click="DelValue"
                                            Style="{StaticResource IconButton}"
                                            Tag="{Binding}">
                                            <Path
                                                Width="10"
                                                Height="10"
                                                Data="{StaticResource CloseIco}"
                                                Fill="{DynamicResource Text.Primary.Brush}"
                                                Stretch="Fill" />
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Border
                Grid.Row="1"
                Grid.Column="0"
                Width="2"
                HorizontalAlignment="Right" />


            <Grid Grid.Row="1" Grid.Column="1">
                <oxy:PlotView
                    Name="PlotModel"
                    Grid.ColumnSpan="2"
                    Background="Transparent"
                    Model="{Binding PlotModel}"
                    MouseDoubleClick="DoubleClick" />
            </Grid>
        </Grid>
    </hc:DialogContainer>
</Window>
