<UserControl
    x:Class="PressMachineMainModeules.Components.AutoParametersBooleanValue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i18n="clr-namespace:WPF.Admin.Themes.I18n;assembly=WPF.Admin.Themes"
    xmlns:converters="clr-namespace:PressMachineMainModeules.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PressMachineMainModeules.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="boolValue"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:TypeVisibilityConverter x:Key="typeVisibility" />
        <converters:EnumToChineseConverter x:Key="enumtochinese" />
        <converters:AutoParameterDefaultConverter x:Key="AutoParameterDefaultConverter" />
        <Style x:Key="CorBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="8" />
        </Style>
        <converters:BoolParametersConverter x:Key="BoolParametersTrueConverter1" Open="True" />
        <converters:BoolParametersConverter x:Key="BoolParametersFalseConverter1" Open="False" />
    </UserControl.Resources>
    <Border
        MinWidth="200"
        MaxWidth="500"
        Margin="20,10,10,10"
        Background="{DynamicResource Border.Brush}"
        Style="{StaticResource CorBorder}">
        <StackPanel Margin="10">
            <TextBlock FontWeight="Bold" Text="{Binding AutoParameterContent.Desc, ElementName=boolValue}" />
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="60" />
                </Grid.ColumnDefinitions>
                <Border BorderBrush="{DynamicResource Border.Brush}" BorderThickness="0,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton
                            Name="open"
                            Margin="10,5"
                            IsChecked="{Binding ElementName=boolValue,
                            Path=AutoParameterContent.Value,
                            Converter={StaticResource BoolParametersTrueConverter1},Mode=TwoWay}"
                            Checked="openChecked"
                            i18n:I18nLocalizeAttach.AutoLocalize="ParametersBoolean.Open"
                            GroupName="sta" />
                        <RadioButton
                            x:Name="close"
                            IsChecked="{Binding ElementName=boolValue,
Path=AutoParameterContent.Value,
Converter={StaticResource BoolParametersFalseConverter1},Mode=TwoWay}"
                            Margin="10,5"
                            Checked="closeChecked"
                            i18n:I18nLocalizeAttach.AutoLocalize="ParametersBoolean.Close"
                            GroupName="sta" />
                    </StackPanel>
                </Border>
                <TextBlock
                    Grid.Column="1"
                    Margin="5,0"
                    VerticalAlignment="Bottom"
                    FontWeight="Bold"
                    Text="{Binding AutoParameterContent.Unit, ElementName=boolValue}" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>